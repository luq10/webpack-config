{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esNext",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "strict": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "@types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
